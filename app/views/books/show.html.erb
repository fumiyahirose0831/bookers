
<%= render 'books/list', user: @user, book: @book_new %>

<div class="col-md-8 offset-md-1">
 <h2>Book detail</h2>
  <table class="table table-hover table-inverse">
   <thead>
    <tr></tr>
   </thead>

   <tbody>

    <tr>
     <td>
      <%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
      <p><%= @book.user.name %></p>
     </td>

     <td><%= link_to @book.title, book_path(@book) %></td>
     <td><%= @book.body %></td>
     <% if @book.user.id == current_user.id %>
     <td><%= link_to "Edit",edit_book_path(@book), class:"btn btn-success btn-sm"  %> </td>
     <td><%= link_to "Destroy",book_path(@book),method: :delete , "data-confirm" => "本当に削除しますか？" , class:"btn btn-danger btn-sm"%> </td>
     <% end %>
 <td></td>

    </tr>
   </tbody>
  </table>
</div>

</main>
