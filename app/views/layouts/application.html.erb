<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
   <body class="d-flex flex-column vh-100">
    <header class="bg-dark text-white">
      <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
          <a class="navbar-brand p-1" href="/" >Bookers</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
           <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
    
        <% if user_signed_in? %>
  <a class="navbar-brand" href="#"></a>
         <i class="fas fa-home"></i>
        <li class="nav-item">
         <%= link_to "Home",user_path(current_user.id) , class: 'nav-link text-white' %>
        </li>
        
         <i class="fas fa-users"></i>
        <li class="nav-item">
         <%= link_to "Users",user_path(current_user.id) , class: 'nav-link text-white' %>
        </li>
        
         <i class="fas fa-book-open"></i>
        <li class="nav-item"> 
         <%= link_to "Books",books_path, class: 'nav-link text-white' %>
        </li>
        
         <i class="fas fa-sign-out-alt"></i>
        <li class="nav-item"> 
         <%= link_to "Log out ", destroy_user_session_path, method: :delete, class: 'nav-link text-white' %>
        </li>
        
        <% else %>
        
         <i class="fas fa-home"></i>
        <li class="nav-item">
         <%= link_to "Home",root_path, class: 'nav-link text-white' %>
        </li>
        
         <i class="fas fa-link"></i>
        <li class="nav-item">
         <%= link_to "About","#", class: 'nav-link text-white' %>
        </li>
        
         <i class="fas fa-user-plus"></i>
        <li class="nav-item">
         <%= link_to "Sign up", new_user_registration_path, class: 'nav-link text-white' %>
        </li>
        
         <i class="fas fa-sign-in-alt"></i>
        <li class="nav-item">
         <%= link_to "Log in", new_user_session_path, class: 'nav-link text-white' %>
        </li>
        
       <% end %>
        <%= yield %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    
  </body>
</html>
